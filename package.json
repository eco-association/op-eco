{
  "name": "@helix-foundation/op-eco",
  "version": "0.0.1",
  "description": "An implementation of the ECO token on the Optimism rollup",
  "keywords": [
    "solidity",
    "ethereum",
    "optimism",
    "eco"
  ],
  "homepage": "https://github.com/helix-foundation/op-eco#readme",
  "bugs": {
    "url": "https://github.com/helix-foundation/op-eco/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/helix-foundation/op-eco.git"
  },
  "license": "MIT",
  "author": "Eco Engineering <eng@eco.com>",
  "main": "index.js",
  "files": [
    "tools/**.js",
    "contracts/**.sol",
    "build/contracts/**.json"
  ],
  "scripts": {
    "build": "hardhat compile",
    "clean": "hardhat clean",
    "format": "concurrently 'npm:format:*'",
    "format:eslint": "eslint --fix 'tools/**/**.js' 'test/**/**.js' 'test/**/**.ts'",
    "format:prettier": "prettier --write 'contracts/**/*.sol'",
    "lint": "concurrently 'npm:lint:*'",
    "lint:depcheck": "depcheck --ignore-bin-package --ignores @openzeppelin/contracts,@openzeppelin/contracts-upgradeable,prettier-plugin-solidity,solhint-plugin-eco,concurrently,@types/mocha",
    "lint:eslint": "eslint 'tools/**/**.js' 'test/**/**.js' 'test/**/**.ts'",
    "lint:prettier": "prettier --check 'contracts/**/*.sol'",
    "lint:solhint": "solhint 'contracts/**/*.sol'",
    "snapshots": "UPDATE_SNAPSHOT=1 hardhat test",
    "test": "hardhat test",
    "test:hardhat": "yarn typechain && hardhat test test/**/*.ts",
    "testParallel": "hardhat test --parallel",
    "typechain": "hardhat typechain"
  },
  "dependencies": {
